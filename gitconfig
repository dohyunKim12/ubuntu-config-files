# 깃의 사용자별 설정 파일입니다.
# /etc/gitconfig (in Linux)
# ~/.gitconfig   (in Windows)
[user]
	name = dohyunkim
	email = kdh951102@gmail.com

[diff]
	tool = intellij
[difftool "intellij"]
    cmd = idea.exe diff $LOCAL $REMOTE
[alias]
    d = difftool

[push]
    default = current
[pull]
    rebase = true
[alias]
    st = status
    lg = log --graph --all --pretty=format:'%C(yellow)(%ad)%C(reset) %C(green)(%h)%C(reset) | %C(white)%s %C(bold red){{%an}}%C(reset) %C(blue)%d%C(reset)' --date=short

[merge]
    keepBackup = false;
    tool = intellij
[mergetool]
    prompt = false
[mergetool "intellij"]
    cmd = idea.exe merge $LOCAL $REMOTE $BASE $MERGED
    keepTemporaries = false
    trustExitCode = false
    keepBackup = false

[init]
    defaultBranch = main
